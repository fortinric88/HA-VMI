{
  "name": "Ventilairsec VMI Monitor",
  "version": "1.0.0",
  "slug": "ventilairsec-vmi",
  "description": "Monitor Ventilairsec Purevent VMI via EnOcean GPIO module with historical data and web dashboard",
  "url": "https://github.com/fortinric88/HA-VMI",
  "arch": ["armhf", "armv7", "arm64"],
  "homeassistant": "2024.1.0",
  "host_network": true,
  "privileged": ["NET_ADMIN", "SYS_ADMIN"],
  "devices": ["/dev/ttyAMA0"],
  "startup": "system",
  "boot": "auto",
  "ports": {
    "5000/tcp": 5000
  },
  "environment": {
    "TZ": "Europe/Paris"
  },
  "options": {
    "serial_port": "/dev/ttyAMA0",
    "log_level": "info",
    "update_interval": 10,
    "db_path": "/config/ventilairsec"
  },
  "schema": {
    "serial_port": "str",
    "log_level": "list(debug|info|warning|error)",
    "update_interval": "int(5,600)",
    "db_path": "str"
  },
  "services": [],
  "translations": {
    "fr": {
      "configuration": {
        "serial_port": "Port série EnOcean",
        "log_level": "Niveau de journalisation",
        "update_interval": "Intervalle de mise à jour (secondes)",
        "db_path": "Chemin de la base de données"
      }
    }
  }
}
